<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Customers <a href="/customer/add" class="btn btn-success float-end">Add New Customer</a></h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th></th> <!-- Header for the delete column -->
                    </tr>
                </thead>
                <tbody>
                    {{#each customers}}
                    <tr>
                        <td>{{this.firstName}}</td>
                        <td>{{this.lastName}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.phone}}</td>
                        <td>{{this.address}}</td>
                        <td><a href="/customer/delete/{{this.id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this customer?');">Remove</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{#unless customers}}
        <div class="col-md-12 text-center">
            <strong>No customers available.</strong>
        </div>
        {{/unless}}
    </div>
</div>
