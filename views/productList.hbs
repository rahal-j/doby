<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Products <a href="/product/add" class="btn btn-success float-end">Add New Product</a></h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Subcategory</th>
                        <th>Item</th>
                        <th>Price</th>
                        <th>Unit</th>
                        <th></th> <!-- Header for the delete column -->
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td>{{this.category}}</td>
                        <td>{{this.subcategory}}</td>
                        <td>{{this.item}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.unit}}</td>
                        <td><a href="/product/delete/{{this.id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">Remove</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{#unless products}}
        <div class="col-md-12 text-center">
            <strong>No products available.</strong>
        </div>
        {{/unless}}
    </div>
</div>
