<div class="row">
    <main class="col-md-12">
        <h2>Add a New Product</h2>
        <form method="POST" action="/product/add">
            <div class="form-group">
                <label>Category:</label>
                <select class="form-control" name="category" required>
                    <option value="Wash & Dry">Wash & Dry</option>
                    <option value="Wash & Press">Wash & Press</option>
                    <option value="Press Only">Press Only</option>
                    <option value="Spot Removing">Spot Removing</option>
                    <option value="Dry Cleaning">Dry Cleaning</option>
                </select>
            </div>
            <div class="form-group">
                <label>Subcategory:</label>
                <input class="form-control" name="subcategory" type="text" />
            </div>
            <div class="form-group">
                <label>Item:</label>
                <input class="form-control" name="item" type="text" required />
            </div>
            <div class="form-group">
                <label>Price (Rs):</label>
                <input class="form-control" name="price" type="number" step="0.01" required />
            </div>
            <div class="form-group">
                <label>Unit:</label>
                <select class="form-control" name="unit" required>
                    <option value="Kg">Kg</option>
                    <option value="piece">piece</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Add Product</button>
        </form>
    </main>
</div>