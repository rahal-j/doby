<!-- views/orderList.hbs -->
<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Orders</h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer Name</th>
                        <th>Delivery Date</th>
                        <th>Subtotal</th>
                        <th>Discount</th>
                        <th>Total</th>
                        <th></th> <!-- Header for the delete column -->
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.customerName}}</td>
                        <td>{{this.deliveryDate}}</td>
                        <td>{{this.subtotal}}</td>
                        <td>{{this.discount}}</td>
                        <td>{{this.total}}</td>
                        <td><a href="/order/delete/{{this.id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this order?');">Remove</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{#unless orders}}
        <div class="col-md-12 text-center">
            <strong>No orders available.</strong>
        </div>
        {{/unless}}
    </div>
</div>
